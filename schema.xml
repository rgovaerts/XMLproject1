<?xml version="1.0"?>

<xs:schema xmlns:xs=""
targetNamespace=""
xmlns=""
elementFormDefault="qualified">

<xs:complexType name="DepartementType">
	<xs:complexType name ="scientific_product">
		<xs:complexType name="scientific_book">
			<xs:sequence>
				<xs:complexType name="Authors" use=“required”>
					<!-- list of authors-->
					<xs:list itemType="xs:string"/>
				<xs:complexType name="Editors" use=“required”>
					<!-- list of editors-->
					<xs:list itemType="xs:string"/>
				<xs:complexType name="Publishers" use=“required”>
					<!-- list of publishers-->
					<xs:list itemType="xs:string"/>
				<xs:element name=“Year of publication” type=“xs:gYear” use=“required”/>
				<xs:complexType name="Abstract"/>
					<xs:list itemType="xs:string"/>
				<xs:element name="Edition" type="xs:int"/>
				<xs:element name="ISBN" type="xs:string"/>
			</xs:sequence>
		</xs:complexType>
		<xs:complexType name="scientific_journal">
			<!-- TO DO -->
		</xs:complexType>
	</xs:complexType>
	<xs:complexType name="leisure_product">
		<xs:complexType name="leisure_book">
			<!-- TO DO -->
		</xs:complexType>
		<xs:complexType name="leisure_periodical">
			<!-- TO DO -->
		</xs:complexType>
	</xs:complexType>
</xs:complexType>

</xs:schema> 
